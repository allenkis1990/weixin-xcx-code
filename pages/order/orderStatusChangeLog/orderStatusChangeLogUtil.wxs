var getStatusImageSrc = function (status) {
  var src = ""
  switch (status) {
    case 0: {
      src = "/image/record-submit.png"
      break
    }
    case 1: {
      src = "/image/record-submit.png"

      break
    }
    case 3: {
      src = "/image/record-paid.png"
      break
    }
    case 5: {
      src = "/image/record-send.png"
      break
    }
    case 6: {
      src = "/image/record-success.png"
      break
    }
    case 7: {
      src = "/image/record-submit.png"
      break
    }
    default:
      break
  }
  return src
}
